<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View_Account">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#00A884"
        android:layout_marginBottom="30sp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30sp"


            android:id="@+id/back_view_acc"
            android:src="@drawable/ic_arrow_back_black_24dp"
            >

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="View Account"
            android:layout_gravity="center"
            android:textStyle="bold"

            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/corner_radous"
        android:layout_height="wrap_content">
        <LinearLayout
          android:layout_marginBottom="30sp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="Account Name"
        android:layout_gravity="start"
android:paddingTop="10dp"
        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_margin="10sp"
        android:gravity="center_horizontal"
        android:hint="Account Name"
        android:textColor="@color/white"
        android:inputType="text"
        android:id="@+id/view_acc_name"
        android:textAlignment="center">

    </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="30sp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="Account type"
        android:layout_gravity="start"

        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_margin="10sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:hint="type"
        android:id="@+id/view_acc_type"
        android:textAlignment="center">

    </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="30sp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="Phone Number"
        android:layout_gravity="start"
android:paddingTop="10sp"
        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_margin="10sp"
  android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:hint="Phone number"

        android:id="@+id/view_acc_phone"
        android:textAlignment="center">

    </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="30sp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="Address"
        android:layout_gravity="start"
android:paddingTop="10dp"
        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_margin="10sp"
        android:gravity="center_horizontal"
android:textColor="@color/white"
        android:inputType="number"
        android:id="@+id/view_acc_address"
        android:hint="Address"
        android:textAlignment="center">

    </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="30sp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="Debit"
        android:layout_gravity="start"
android:paddingTop="10dp"
        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_margin="10sp"
        android:gravity="center_horizontal"
        android:hint="Debit"
         android:textColor="@color/white"
        android:inputType="text"
        android:id="@+id/view_acc_debit"
        android:textAlignment="center">

    </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="30sp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="Credit"
        android:layout_gravity="start"
android:paddingTop="10sp"
        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_margin="10sp"
        android:gravity="center_horizontal"
        android:hint="Credit"
        android:textColor="@color/white"
        android:inputType="date"
        android:id="@+id/view_acc_credit"
        android:textAlignment="center">

    </TextView>
        </LinearLayout>
        </LinearLayout>

</LinearLayout>