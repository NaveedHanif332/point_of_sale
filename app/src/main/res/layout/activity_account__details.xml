<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Update_product">
    <LinearLayout
        android:layout_marginBottom="10sp"
        android:layout_width="match_parent"
        android:background="#B3F6C7"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30sp"


            android:id="@+id/back_view_product"
            android:src="@drawable/ic_arrow_back_black_24dp"
            >

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="View Product"
            android:layout_gravity="center"
            android:textStyle="bold"

            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
      android:background="@drawable/corner_radous"
        android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="30sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="Product Name"
        android:paddingTop="10dp"
        android:layout_gravity="start"


        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>


        <TextView
            android:id="@+id/view_pro_p_name"
            android:layout_width="match_parent"
            android:layout_height="29dp"

            android:layout_margin="10sp"
            android:gravity="center_horizontal"
            android:hint="Product Name"
            android:textAlignment="center"
            android:textColorHint="@color/white">

        </TextView>
    </LinearLayout>
        <LinearLayout
            android:paddingTop="30sp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="Product cost"
        android:layout_gravity="start"
        android:paddingTop="10dp"

        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_margin="10sp"
        android:background="@drawable/corner_radous"
        android:gravity="center_horizontal"
        android:hint=" Cost"

        android:textColorHint="@color/white"
        android:inputType="number"
        android:id="@+id/view_pro_p_cast"
        android:textAlignment="center">

    </TextView>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="30sp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="Product Sale Price"
        android:layout_gravity="start"

        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_margin="10sp"
    android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        android:hint=" Sale Price"

        android:inputType="number"
        android:id="@+id/view_pro_p_sale_price"
        android:textAlignment="center">

    </TextView>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="30sp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="Product Units"
        android:layout_gravity="start"

        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_margin="10sp"
      android:textColorHint="@color/white"
        android:gravity="center_horizontal"

        android:inputType="number"
        android:id="@+id/view_pro_p_unit"
        android:hint="units"
        android:textAlignment="center">

    </TextView>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="30sp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="Product Category"
        android:layout_gravity="start"

        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_margin="10sp"
     android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        android:hint="Product Category"

        android:inputType="text"
        android:id="@+id/view_pro_p_cat"
        android:textAlignment="center">

    </TextView>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="Exp Date"
        android:layout_gravity="start"

        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_margin="10sp"
       android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        android:hint="Expiry Date"

        android:inputType="date"
        android:id="@+id/view_pro_p_expire_date"
        android:textAlignment="center">

    </TextView>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="30sp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="Discount"
        android:layout_gravity="start"

        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_margin="10sp"
        android:gravity="center_horizontal"
        android:textColorHint="@color/white"
        android:hint="Discount"
        android:inputType="numberDecimal"
        android:id="@+id/view_pro_p_discount"
        android:textAlignment="center">

    </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>