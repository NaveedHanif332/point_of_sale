<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Add_product">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="30sp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30sp"


            android:id="@+id/back_add_product"
            android:src="@drawable/ic_arrow_back_black_24dp"
           >

        </ImageView>
        <TextView
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:text="Add Product"
            android:layout_gravity="center"
            android:textStyle="bold"

            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/corner_radous"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


    <TextView
        android:paddingTop="20sp"
        android:layout_width="wrap_content"
        android:text="*Product Name"
        android:layout_gravity="start"


        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
 android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        android:hint="Product Name"
android:maxLines="1"
        android:inputType="text"
        android:id="@+id/add_pro_p_name"
        android:textAlignment="center">

    </EditText>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <TextView
        android:layout_width="wrap_content"
        android:text="*Product cost"
        android:layout_gravity="start"
            android:paddingTop="20sp"

        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
      android:textColorHint="@color/white"
        android:layout_marginLeft="20sp"
        android:gravity="center_horizontal"
        android:hint=" Cost"
        android:inputType="number"
        android:id="@+id/add_pro_p_cost"
        android:textAlignment="center">

    </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20sp"

                android:paddingTop="10dp"
                android:text="*Product Sale Price"
                android:textColor="@color/white"
                android:textSize="20dp">

            </TextView>

            <EditText
                android:id="@+id/add_pro_p_sale_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:gravity="center_horizontal"
                android:hint=" Sale Price"

                android:inputType="number"
                android:textAlignment="center"
                android:textColorHint="@color/white">

            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <TextView
        android:layout_width="wrap_content"
        android:text="*Product Units"
        android:layout_gravity="start"
android:paddingTop="20sp"
        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
   android:textColorHint="@color/white"
        android:maxLines="1"
        android:gravity="center_horizontal"

        android:inputType="number"
        android:id="@+id/add_pro_p_unit"
        android:hint="units"
        android:textAlignment="center">

    </EditText>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <TextView

        android:layout_width="wrap_content"
        android:text="*Category"
        android:layout_gravity="start"

        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        android:hint="Product Category"

        android:inputType="text"
        android:id="@+id/add_pro_p_cat"
        android:textAlignment="center">

    </EditText>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="*Exp Date"
        android:paddingTop="20sp"
        android:layout_gravity="start"

        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
       android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        android:hint="Expiry Date"

        android:inputType="date"
        android:id="@+id/add_pro_p_expire_date"
        android:textAlignment="center">

    </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="*Discount"
        android:paddingTop="20sp"
        android:layout_gravity="start"

        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
      android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        android:hint="Discount"

        android:inputType="numberDecimal"
        android:id="@+id/add_pro_p_discount"
        android:textAlignment="center">

    </EditText>
        </LinearLayout>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_margin="10dp"


    android:layout_height="50dp">
    <Button
        android:layout_width="115dp"
        android:layout_height="match_parent"
        android:background="@drawable/corner_radous"
        android:text="clear"
        android:textSize="30sp"
        android:id="@+id/add_pro_btn_clr"
        android:textColor="@color/white"
        android:textStyle="bold">
    </Button>
    <Button
        android:layout_width="115dp"
        android:layout_height="match_parent"
        android:background="@drawable/corner_radous"
        android:textColor="@color/white"
        android:text="ADD"
        android:layout_marginLeft="50dp"
        android:textSize="30sp"
        android:id="@+id/add_pro_btn_add"
        android:textStyle="bold">

    </Button>
</LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-8196601564130710/3014787443" />

</LinearLayout>