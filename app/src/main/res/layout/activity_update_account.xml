<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Update_account">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#00A884"
        android:layout_marginBottom="30sp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30sp"


            android:id="@+id/back_update_acc"
            android:src="@drawable/ic_arrow_back_black_24dp"
            >

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Update Account"
            android:layout_gravity="center"
            android:textStyle="bold"

            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/corner_radous"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:paddingTop="20sp"
        android:layout_width="wrap_content"
        android:text="Account Name"
        android:layout_gravity="start"
        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
 android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        android:hint="Enter Accountant's Name"
        android:inputType="text"
        android:id="@+id/update_name"
        android:textAlignment="center">
    </EditText>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:paddingTop="20sp"
        android:layout_width="wrap_content"
        android:text="Account Type"
        android:layout_gravity="start"
        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        android:hint="Enter Account Type"
        android:inputType="number"
        android:id="@+id/update_type"
        android:textAlignment="center">
    </EditText>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:paddingTop="20sp"
        android:layout_width="wrap_content"
        android:text="Phone Number"
        android:layout_gravity="start"
        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        android:hint="Enter phone number"
        android:inputType="number"
        android:id="@+id/update_phone"
        android:textAlignment="center">

    </EditText>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="Address"
        android:layout_gravity="start"
android:paddingTop="20sp"
        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:textColorHint="@color/white"
        android:gravity="center_horizontal"

        android:inputType="number"
        android:id="@+id/update_address"
        android:hint="Address"
        android:textAlignment="center">

    </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="Debit "
        android:layout_gravity="start"
        android:paddingTop="20sp"

        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"

        android:gravity="center_horizontal"
        android:hint="Enter Debit Amount"
android:textColorHint="@color/white"
        android:inputType="text"
        android:id="@+id/update_debit"
        android:textAlignment="center">

    </EditText>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="30sp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:paddingTop="20sp"
        android:layout_width="wrap_content"
        android:text="Credit"
        android:layout_gravity="start"
        android:layout_marginLeft="20sp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content">

    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
 android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        android:hint="Enter Starting Credit"
        android:inputType="date"
        android:id="@+id/update_credit"
        android:textAlignment="center">

    </EditText>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp"

        android:layout_height="50dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/corner_radous"
            android:text="clear"
            android:textColorHint="@color/white"
            android:textSize="30sp"
            android:id="@+id/update_btn_clr"
            android:textColor="@color/white"
            android:textAllCaps="false"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:background="@drawable/corner_radous"
            android:textColor="@color/white"
            android:text="update"
            android:layout_marginLeft="50dp"
            android:textSize="30sp"
            android:id="@+id/update_btn_acc"
          >

        </Button>
    </LinearLayout>
        </LinearLayout>

