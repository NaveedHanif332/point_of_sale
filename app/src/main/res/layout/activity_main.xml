<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >



<include
    layout="@layout/toolbar"></include>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="10dp"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            android:id="@+id/card_pro"


            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/image_pro"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/red"
                    android:padding="10dp"
                    android:src="@drawable/product"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Product"
                    android:textSize="20sp"
                    android:textColor="#F5009B"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#ededed"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product details "/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            android:id="@+id/card_acc"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/im_acc"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/yellow"
                    android:padding="10dp"
                    android:src="@drawable/ic_account"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Accounts"
                    android:textColor="#F5009B"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#ededed"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accounts Details"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            android:id="@+id/card_pur"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/im_pur"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/blue"
                    android:padding="10dp"
                    android:src="@drawable/sale"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Purchase"
                    android:textColor="#F5009B"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#ededed"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="purchase details"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            android:id="@+id/card_sale"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/im_sale"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/green_shape"
                    android:padding="10dp"
                    android:src="@drawable/ic_shopping_cart_black_24dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Sales"
                    android:textColor="#F5009B"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#ededed"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sale Details "/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:id="@+id/card_pay"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/pay_l"
            android:gravity="center">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/im_payment"
                android:background="@drawable/red"
                android:padding="10dp"
                android:src="@drawable/ic_payment_black_24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Payment"
                android:textColor="#F5009B"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#ededed"/>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Details"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:id="@+id/card_inv"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="64dp"
                android:id="@+id/im_invc"
                android:layout_height="64dp"
                android:background="@drawable/yellow"
                android:padding="10dp"
                android:src="@drawable/invoice"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Invoice"
                android:textColor="#F5009B"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#ededed"/>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Invoice Details"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
</LinearLayout>



