<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Sale_datails">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#00A884"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30sp"


            android:id="@+id/back_details"
            android:src="@drawable/ic_arrow_back_black_24dp"
            >

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Details"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:textStyle="bold"

            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
    android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/corner_radous"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="20sp"
                android:layout_marginLeft="20sp"
                android:text="Sale ID:"/>
            <TextView

                android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/sale_details_sale_id"
                android:layout_marginLeft="120sp"
                android:text="sale id"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="20sp"
                android:layout_marginLeft="20sp"
                android:text="Total products:"/>
            <TextView

                android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/sale_details_total_pro"
                android:layout_marginLeft="50sp"
                android:text="products"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="20sp"
                android:layout_marginLeft="20sp"
                android:text="Invoice No:"/>
            <TextView

                android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/sale_details_inv_no"
                android:layout_marginLeft="90sp"
                android:text="inv_no"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:background="@drawable/corner_radous"
        android:text="Products list"
        android:textColor="@color/white"
        android:textSize="30sp">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="20sp"
        android:background="@drawable/corner_radous"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Name"
            android:layout_marginLeft="40dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Quantity"
            android:layout_marginLeft="120dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sale_datail_rec"
        android:layout_width="match_parent"
        android:layout_height="260dp">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>